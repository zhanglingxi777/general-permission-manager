<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhouyang.admin.mapper.PermissionMapper">

    <resultMap type="top.zhouyang.admin.domain.Permission" id="EbSysPermissionResult">
        <result property="id" column="id"/>
        <result property="label" column="label"/>
        <result property="parentId" column="parent_id"/>
        <result property="parentName" column="parent_name"/>
        <result property="code" column="code"/>
        <result property="path" column="path"/>
        <result property="name" column="name"/>
        <result property="url" column="url"/>
        <result property="type" column="type"/>
        <result property="icon" column="icon"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="orderNum" column="order_num"/>
    </resultMap>

    <sql id="selectEbSysPermissionVo">
        select id,
               label,
               parent_id,
               parent_name,
               code,
               path,
               name,
               url,
               type,
               icon,
               create_time,
               update_time,
               remark,
               order_num
        from tb_permission
    </sql>

    <select id="selectPermissionList" parameterType="top.zhouyang.admin.domain.Permission"
            resultMap="EbSysPermissionResult">
        <include refid="selectEbSysPermissionVo"/>
        <where>
            <if test="label != null  and label != ''">and label like concat('%', #{label}, '%')</if>
        </where>
        order by order_num
    </select>

    <!-- List<EbSysPermission> selectEbSysPermissionByRoleId(Long roleId);   -->
    <select id="selectPermissionById" resultMap="EbSysPermissionResult" parameterType="long">
        select
            esp.*
        from tb_permission esp
        inner join tb_role_permission esrp on esrp.permission_id = esp.id
        where esrp.role_id = #{roleId}
    </select>

    <select id="selectPermissionByRoleId" parameterType="Long" resultMap="EbSysPermissionResult">
        <include refid="selectEbSysPermissionVo"/>
        where id = #{id}
    </select>

    <insert id="insertPermission" parameterType="top.zhouyang.admin.domain.Permission"
            useGeneratedKeys="true" keyProperty="id">
        insert into tb_permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="label != null and label != ''">label,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="parentName != null">parent_name,</if>
            <if test="code != null">code,</if>
            <if test="path != null">path,</if>
            <if test="name != null">name,</if>
            <if test="url != null">url,</if>
            <if test="type != null">type,</if>
            <if test="icon != null">icon,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="orderNum != null">order_num,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="label != null and label != ''">#{label},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="parentName != null">#{parentName},</if>
            <if test="code != null">#{code},</if>
            <if test="path != null">#{path},</if>
            <if test="name != null">#{name},</if>
            <if test="url != null">#{url},</if>
            <if test="type != null">#{type},</if>
            <if test="icon != null">#{icon},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="orderNum != null">#{orderNum},</if>
        </trim>
    </insert>

    <update id="updatePermission" parameterType="top.zhouyang.admin.domain.Permission">
        update tb_permission
        <trim prefix="SET" suffixOverrides=",">
            <if test="label != null and label != ''">label = #{label},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="parentName != null">parent_name = #{parentName},</if>
            <if test="code != null">code = #{code},</if>
            <if test="path != null">path = #{path},</if>
            <if test="name != null">name = #{name},</if>
            <if test="url != null">url = #{url},</if>
            <if test="type != null">type = #{type},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePermissionById" parameterType="Long">
        delete
        from tb_permission
        where id = #{id}
    </delete>

    <delete id="deletePermissionByIds" parameterType="String">
        delete from tb_permission where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- List<EbSysPermission> selectPermissionListByRoleIds(List<Long> roles);   -->
    <select id="selectPermissionListByRoleIds" parameterType="long" resultMap="EbSysPermissionResult">
        SELECT
            esp.id,
            esp.label,
            esp.parent_id,
            esp.`code`,
            esp.path,
            esp.`name`,
            esp.url,
            esp.type,
            esp.icon,
            esp.remark
        FROM
            tb_permission esp
        LEFT JOIN tb_role_permission esrp ON esp.id = esrp.permission_id
        WHERE esrp.role_id IN
        <foreach item="item" index="index" collection="roles"
                 open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>